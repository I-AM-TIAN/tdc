---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl text-center my-8 text-[#58ABC7]">Projects</h2>

{
    projects.map((project) => (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4 text-[#58ABC7]">{project.title}</h2>
                <p class="my-2">{project.description}</p>
                <button class="bg-[#3E994E] px-3 py-2 hover:bg-[#3E990E]">
                    More info
                </button>
            </div>
            <div class="flex-1">
                <img src={project.image} class="w-72 m-auto" />
            </div>
        </div>
    )) 
}
