---
import features from "../../config/features.json";
---

<h1 class="text-center font-bold text-5xl mt-10 text-[#58ABC7]">Servicios</h1>
<div>
    <div class="grid md:grid-cols-3 gap-4 p-4">
        {
            features.map((feature) => (
                <div class="bg-slate-800 p-10 rounded-xl">
                    <h2 class="text-2xl font-bold my-4 text-[#58ABC7]">
                        {feature.title}
                    </h2>
                    <p class="text-justify">{feature.description}</p>
                    <div class="flex-1">
                        <img src={feature.image} class="w-60 m-auto" />
                    </div>
                </div>
            ))
        }
    </div>
</div>
